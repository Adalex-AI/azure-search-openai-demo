# Sample environment file for local development
# Copy this to .env and fill in your Azure service values
# OR use `azd up` to provision and configure automatically

# Required: Azure Storage
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_CONTAINER=content

# Required: Azure AI Search
AZURE_SEARCH_SERVICE=your-search-service
AZURE_SEARCH_INDEX=gptkbindex

# Required: Azure OpenAI
AZURE_OPENAI_SERVICE=your-openai-service
AZURE_OPENAI_CHATGPT_MODEL=gpt-4o-mini
AZURE_OPENAI_CHATGPT_DEPLOYMENT=chat
AZURE_OPENAI_EMB_MODEL_NAME=text-embedding-ada-002
AZURE_OPENAI_EMB_DEPLOYMENT=embedding

# Optional: OpenAI directly (set OPENAI_HOST=openai)
# OPENAI_HOST=openai
# OPENAI_API_KEY=your-openai-api-key

# Optional: Authentication
# AZURE_TENANT_ID=your-tenant-id
# AZURE_USE_AUTHENTICATION=false

# Optional: Speech services
# USE_SPEECH_INPUT_BROWSER=false
# USE_SPEECH_OUTPUT_BROWSER=false
